<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SHADOW LAYER -->
    <item android:id="@+id/inner"
        android:left="5dp"
        android:top="5dp">
        <shape>
            <solid android:color="@color/splash_background_color" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- CONTENT LAYER -->
    <item

        android:bottom="6dp"
        android:right="6dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#767688"/>
            <solid android:color="#FFFFFF" />
            <corners android:radius="15dp" />
        </shape>
    </item>


</layer-list>
