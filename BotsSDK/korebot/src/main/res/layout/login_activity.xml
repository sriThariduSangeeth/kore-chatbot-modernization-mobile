<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bank"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textColor="#02406D"
            android:text="WELCOME TO CHATBOT DEMO"/>
        <EditText
            android:id="@+id/ctMail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="USER NAME"
            android:textColorHint="#02406D"
            android:layout_gravity="center"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_username"
            android:background="@drawable/edit_view"
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/ctPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="PASSWORD"
            android:textColorHint="#02406D"
            android:layout_gravity="center"
            android:drawablePadding="20dp"
            android:password="true"
            android:drawableLeft="@drawable/ic_passw"
            android:background="@drawable/edit_view"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="normal"
            android:textSize="13dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:textColor="#02406D"
            android:layout_marginRight="50dp"
            android:text="Forget Password ?"/>

        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Log In"
            android:textColor="#ffff"
            android:background="#02406D"
            android:backgroundTint= "#02406D"
            />

    </LinearLayout>


</LinearLayout>